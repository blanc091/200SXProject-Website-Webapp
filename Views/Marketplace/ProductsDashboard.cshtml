<html>
	<head>
		<!-- Google tag (gtag.js) -->
		<script async src="https://www.googletagmanager.com/gtag/js?id=G-6TGFNLDLZ5"></script>
		<script nonce="@Context.Items["CSPNonce"]">
			window.dataLayer = window.dataLayer || [];
