<body class="is-preload" data-is-pass-reset-email-sent="@TempData["PassResetLinkEmailed"]" data-is-pass-reset-success="@TempData["PassResetSuccess"]" data-is-email-verified-login="@TempData["IsEmailVerifiedLogin"]" data-is-user-verified="@TempData["IsUserVerified"]" data-is-form-register-success="@TempData["IsFormRegisterSuccess"]" data-is-nice-try="@TempData["isNiceTry"]">

	<!-- Wrapper -->
	<div id="wrapper" class="fade-in">

		<!-- Intro -->
		<div id="intro">
			<img src="~/images/flag.png" alt="Swiss Flag" class="flag" title="Image by pngtree.com">
			<br>
			<img src="~/images/flagRo.png" alt="Romania Flag" class="flagRo" title="Image by pngtree.com">
			<h1>Nissan 200SX Project</h1>
			<p>The Nissan 200SX Project by <b>Import Garage</b>; photos, updates, builds and more.</p>
			<br>
			<ul class="actions">
				<li><a href="#header" class="button icon solid solo fa-arrow-down scrolly">Continue</a></li>
			</ul>
		</div>

		<!-- Header -->
		<header id="header">
			<a asp-controller="Home" asp-action="Index" class="logo">Import Garage || Jap works</a>
		</header>

		<!-- Nav -->
		<nav id="nav">
			<ul class="links">
				<li class="active">
					<a asp-controller="Home" asp-action="Index">Build updates</a>
				</li>
				<li>
					<a href="/Home/Index?scrollToContactForm=true" id="contactLink">Contact</a>
				</li>
				@if (User.Identity.IsAuthenticated)
				{
					<li><span>Logged in as @User.Identity.Name</span></li>
					<li>
						<a href="#" id="logoutLink">Logout</a>
					</li>
				}
			</ul>
			<ul class="icons">
				<li>
					<a href="https://www.facebook.com/nissan200sxproject" class="icon brands fa-facebook-f">
						<span class="label">Facebook</span>
					</a>
				</li>
				<li>
					<a href="https://www.instagram.com/200sxprojectro?igsh=MWZjeWE4eW5idGU0ZQ==" class="icon brands fa-instagram">
						<span class="label">Instagram</span>
					</a>
				</li>
			</ul>
		</nav>


		<!-- Main -->
		<div id="main">

			<!-- Featured Post -->
			<article class="post featured">
				<header class="major">
					<span class="date"></span>
					<h7>MaintenApp</h7>
					<br><br>
					<p>Use the below form to log into your MaintenApp account; from there, you can handle and configure your service and maintenance intervals and components for your vehicle. After sucessful configuration, you will get email alerts 10 and 5 days respectively before the set alert date.</p>
				</header>
				<form asp-action="Login" method="post">
					<input type="hidden" name="ReturnUrl" value="@ViewData["ReturnUrl"]" />
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<input type="hidden" name="FormType" value="LoginForm" />
					<div class="form-group">
						<label asp-for="Username"></label>
						<input asp-for="Username" class="form-control" />
						<span asp-validation-for="Username" class="text-danger"></span>
					</div>
					<div class="form-group">
						<label asp-for="Password"></label>
						<input asp-for="Password" type="password" class="form-control" />
						<span asp-validation-for="Password" class="text-danger"></span>
					</div>
					<br>
					<button type="submit" class="btn-add-entry">Login</button>
				</form>
				<div class="center-div">
				
						Problems logging in ?
						<a href="/Home/Index?scrollToContactForm=true" class="contact-link"><strong>Contact me</strong></a>. To reset your password, <a href="@Url.Action("ForgotPassReset", "LoginRegister")"><strong>Click here.</strong></a>

				</div>
				<br>
				<!-- Microsoft Login Button -->
				<h3>Or</h3>
				<br>
				<form method="get" action="@Url.Action("LoginMicrosoft", "LoginRegister")">
					<button type="submit" class="btn-add-entry">
						Login with Microsoft
					</button>
				</form>
				<!-- Create New User Button -->
				<br>
				<h3>Don't have an account?</h3>
				<br>
				<form method="get" action="/LoginRegister/Register">
					<button type="submit" class="btn-add-entry">
						Create New User
					</button>
				</form>
			</article>
		</div>

		<!-- Copyright -->
		<div id="copyright">
			<ul>&copy; Import Garage | Design: <a href="https://html5up.net">HTML5 UP</a></ul>
		</div>

	</div>
