@{
	var message = TempData["Message"] as string;
}
@if (!string.IsNullOrEmpty(message))
{
	@await Html.PartialAsync("_MessageModalPartial", message)
}
@await Html.PartialAsync("_CookieModalPartial")
<!DOCTYPE HTML>
